<p id="notice"><%= notice %></p>

<h1>Interested Buyers</h1>

<table>
  <thead>
    <tr>
      <th>Apartment</th>
      <th>Email</th>
      <th>Name</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interested_buyers.each do |interested_buyer| %>
      <tr>
        <td><%= interested_buyer.apartment_id %></td>
        <td><%= interested_buyer.email %></td>
        <td><%= interested_buyer.name %></td>
        <td><%= interested_buyer.phone_number %></td>
        <td><%= link_to 'Show', interested_buyer %></td>
        <td><%= link_to 'Edit', edit_interested_buyer_path(interested_buyer) %></td>
        <td><%= link_to 'Destroy', interested_buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interested Buyer', new_interested_buyer_path %>
